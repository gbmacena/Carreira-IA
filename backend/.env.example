# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=carreira_ai
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/carreira_ai

# JWT Secrets - GERAR NOVOS SECRETS FORTES EM PRODUÇÃO
# Use: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production

# API Keys - Obtenha suas próprias chaves
# OpenAI (opcional)
OPENAI_API_KEY=

# Gemini API Key (obtenha em https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=

# Groq API Key (obtenha em https://console.groq.com)
GROQ_API_KEY=

# Environment
NODE_ENV=development

# Redis (use valores padrão para desenvolvimento)
REDIS_HOST=localhost
REDIS_PORT=6379

# Frontend URL (ajuste para produção)
FRONTEND_URL=http://localhost:3000
